<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fluidpirates.fluidpirates_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_fluid_pirates"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CurrentGroupActivity"
            android:label="@string/title_activity_current_group" />
        <activity
            android:name=".GroupsActivity"
            android:label="@string/title_activity_groups" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".NewGroupActivity"
            android:label="@string/title_activity_new_group" />
        <activity
            android:name=".MembersActivity"
            android:label="@string/title_activity_members" />
        <activity android:name=".CurrentPollActivity" />
    </application>

</manifest>
