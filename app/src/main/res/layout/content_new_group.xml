
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="fluidpirates.fluidpirates_android.LoginActivity">

    <!-- Login progress -->
    <include layout = "@layout/fragment_top_bar"/>




    <Button
        android:id="@+id/create_group"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:background="@drawable/standard_button"
        android:text="CrÃ©er un groupe"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nom :"
        android:id="@+id/NomtextView"
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:gravity="top|left" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/NomtextView"
        android:layout_alignLeft="@+id/NomtextView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:background="@drawable/standard_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description :"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:gravity="top|left"
        android:layout_above="@+id/editText2"
        android:layout_alignLeft="@+id/NomtextView"
        android:layout_alignStart="@+id/NomtextView" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:id="@+id/editText2"
        android:background="@drawable/standard_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Filtrer par domaine :"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:gravity="top|left"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="51dp" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:background="@drawable/standard_button"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(optionel)"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="55dp" />

</RelativeLayout>