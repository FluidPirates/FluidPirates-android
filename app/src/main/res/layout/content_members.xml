<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fluidpirates.fluidpirates_android.Groups">

    <include layout = "@layout/fragment_top_bar"/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="170dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:id="@+id/listGroups"
        android:layout_alignParentBottom="true"
        android:background="@drawable/backcleargreen"
        android:listSelector="@drawable/backnormalgreen"
        android:nestedScrollingEnabled="true"
        android:dividerHeight="10dp"
        android:divider="#ffffff">
    </ListView>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/standard_button"/>

    <Button

        android:id="@+id/chercher"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:textAllCaps="false"
        android:text="  Chercher  "
        android:textSize="16dp"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/standard_button"/>


</RelativeLayout>
