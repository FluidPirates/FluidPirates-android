<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fluidpirates.fluidpirates_android.CurrentPollActivity"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_current_poll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Scrutin"
        android:id="@+id/textView7"
        android:textSize="12pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="poll_open_close"
        android:id="@+id/poll_open_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Propositions:"
        android:id="@+id/textView8"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/propositionsList"
        android:layout_marginTop="5pt" />
</LinearLayout>
